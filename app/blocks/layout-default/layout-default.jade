include ../page/page
include ../header/header
include ../footer/footer
include ../scripts/scripts

block page

doctype html
html(lang='ru')
	include ../head/head
	+page({mods: pageMods})
		.page__header
			block header
			+header({
				data: {
					actions: headerActions,
					logoText: headerTitle,
					logoURL: headerURL
				}
			})

		.page__body
			block content

		.page__footer
			+footer

		+scripts(['app.min.js'])
