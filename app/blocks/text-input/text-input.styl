.text-input
	display block
	width 100%

.text-input__content
	position relative

.text-input__input
	display block
	width 100%
	margin-top var(--space_xxs)
	background #FFFFFF
	border 2px solid #D9D9D9
	box-sizing border-box
	border-radius 4px
	padding-top var(--space_xs)
	padding-bottom var(--space_xs)
	padding-left var(--space_m)
	padding-right var(--space_m)

	&:focus
		outline none
		border-color var(--color_border_primary)

	&::placeholder
		color var(--color_border_primary)

.text-input_type_time
	display flex
	align-items center

	.text-input__input
		-webkit-appearance none
		display inline
		width 52px
		margin-top 0
		margin-left var(--space_xs)
		text-align right

.text-input__note
	margin-left var(--space_xs)

.text-input__clear-button
	font-size 0
	background-color transparent
	border none
	width 16px
	height 16px
	background-image url('/assets/images/clear-button.svg')
	background-size contain
	background-repeat no-repeat
	position absolute
	right 10px
	top 50%
	transform translateY(-50%)

	&:hover, &:focus
		opacity .5
		cursor pointer

	&:focus
		outline none

