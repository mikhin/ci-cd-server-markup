.text-input
	display block
	width 100%

.text-input__content
	display block
	width 100%
	margin-top 6px
	font-size 13px
	line-height 16px
	color var(--color_text_primary)
	background #FFFFFF
	border 2px solid #D9D9D9
	box-sizing border-box
	border-radius 4px
	padding-top 8px
	padding-bottom 8px
	padding-left 12px
	padding-right 12px

	&:focus
		outline none
		border-color var(--color_border_primary)

	&::placeholder
		color var(--color_border_primary)

.text-input_type_time
	display flex
	align-items center

	.text-input__content
		-webkit-appearance none
		width 52px
		margin-top 0
		margin-left 8px
		text-align right

.text-input__note
	font-size 13px
	line-height 16px
	color var(--color_text_primary)
	margin-left 8px
