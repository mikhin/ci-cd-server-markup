.footer
	background-color #F0F2F3
	padding-top 12px
	padding-bottom 12px

	@media (min-width 1024px)
		padding-bottom 8px
		padding-top 8px

.footer__content
	display flex
	flex-direction column

	@media (min-width 1024px)
		flex-direction row

.footer__logo
	margin 0
	font-size 13px
	line-height 18px
	color #7F8285

	@media (min-width 1024px)
		margin-left auto

.footer__menu
	list-style-type none
	display flex
	padding 0
	margin 0
	margin-bottom 8px

	@media (min-width 1024px)
		margin-bottom 0

.footer__menu-item
	&:not(:last-child)
		margin-right 12px

.footer__menu-item-content
	font-size 13px
	line-height 18px
	display flex
	align-items center
	color #7F8285
	text-decoration none

	&:hover, &:focus
		color #E00000

	&:focus
		outline none
