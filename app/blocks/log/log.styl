.log
	padding 4px var(--space_m)
	background #F2F2F2
	box-sizing border-box

	@media (min-width 1024px)
		border-radius var(--space_xxs)
		padding var(--space_xs) var(--space_m)

.log__content
	padding 0
	margin 0
	font-size var(--space_s)
	line-height 20px
	color var(--color_text_primary)
	overflow-x scroll

