.button
	display block
	border none
	background-color transparent
	text-decoration none

	&:focus
		outline none

.button_theme_primary
	color var(--color_text_primary)
	text-align center
	box-sizing border-box
	background var(--color_button_bg_primary)
	border-radius 4px
	padding var(--space_xl)
	padding-top var(--space_m)
	padding-bottom var(--space_m)

	&:hover
		background-color var(--color_button_bg_primary_accent)

	&:focus
		box-shadow 0 0 0 2px #B38F00

.button_theme_secondary
	color var(--color_text_primary)
	text-align center
	background var(--color_button_bg_secondary)
	border-radius 4px
	padding var(--space_xl)
	padding-top var(--space_m)
	padding-bottom var(--space_m)

	&:hover
		background-color var(--color_button_bg_secondary_accent)

	&:focus
		box-shadow 0 0 0 2px var(--color_border_primary)

.button_theme_additional
	color var(--color_text_primary)
	background var(--color_button_bg_secondary)
	border-radius 4px
	padding var(--space_m) var(--space_xl)
	text-align center

	@media (min-width 1024px)
		padding var(--space_xs) 14px

	&:hover
		background-color var(--color_button_bg_secondary_accent)

	&:focus
		box-shadow 0 0 0 2px var(--color_border_primary)

.button_theme_navigation
	box-sizing border-box
	display flex
	align-items center
	background var(--color_button_bg_secondary)
	border-radius 4px
	font-size 13px
	line-height var(--space_m)
	color var(--color_text_primary)
	padding var(--space_xs)

	@media (min-width 1024px)
		padding-right 13px

	&:hover
		background-color var(--color_button_bg_secondary_accent)

	&:focus
		box-shadow 0 0 0 2px var(--color_border_primary)

	.button__icon
		width var(--space_m)
		height var(--space_m)

		@media (min-width 1024px)
			margin-right var(--space_xxs)

	.button__text
		display none

		@media (min-width 1024px)
			display block

	&.button_only-icon
		@media (min-width 1024px)
			padding-right var(--space_xs)

		.button__icon
			@media (min-width 1024px)
				margin-right 0

	.button__hidden-text
		visuallyHidden()
