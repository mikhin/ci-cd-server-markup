.button
	display block
	border none
	background-color transparent
	text-decoration none

	&:focus
		outline none

.button_theme_primary
	text-align center
	box-sizing border-box
	background var(--color_button_bg_primary)
	border-radius 4px
	font-size 13px
	line-height 16px
	color var(--color_text_primary)
	padding 20px
	padding-top 12px
	padding-bottom 12px

	&:hover
		background-color var(--color_button_bg_primary_accent)

	&:focus
		box-shadow 0 0 0 2px #B38F00

.button_theme_secondary
	text-align center
	background var(--color_button_bg_secondary)
	border-radius 4px
	font-size 13px
	line-height 16px
	color var(--color_text_primary)
	padding 20px
	padding-top 12px
	padding-bottom 12px

	&:hover
		background-color var(--color_button_bg_secondary_accent)

	&:focus
		box-shadow 0 0 0 2px var(--color_border_primary)

.button_theme_additional
	background var(--color_button_bg_secondary)
	border-radius 4px
	font-size 13px
	line-height 16px
	color var(--color_text_primary)
	padding 12px 20px
	text-align center

	@media (min-width 1024px)
		padding 8px 14px

	&:hover
		background-color var(--color_button_bg_secondary_accent)

	&:focus
		box-shadow 0 0 0 2px var(--color_border_primary)

.button_theme_navigation
	box-sizing border-box
	display flex
	align-items center
	background var(--color_button_bg_secondary)
	border-radius 4px
	font-size 13px
	line-height 12px
	color var(--color_text_primary)
	padding 8px

	@media (min-width 1024px)
		padding-right 13px

	&:hover
		background-color var(--color_button_bg_secondary_accent)

	&:focus
		box-shadow 0 0 0 2px var(--color_border_primary)

	.button__icon
		width 12px
		height 12px

		@media (min-width 1024px)
			margin-right 6px

	.button__text
		display none

		@media (min-width 1024px)
			display block

	&.button_only-icon
		@media (min-width 1024px)
			padding-right 8px

		.button__icon
			@media (min-width 1024px)
				margin-right 0

	.button__hidden-text
		visuallyHidden()
