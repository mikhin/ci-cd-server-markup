include ../form/form
include ../form/form__field
include ../form/form__actions
include ../form/form__action
include ../text-input/text-input
include ../field-label/field-label

mixin settings-form()
	+b.settings-form&attributes(attributes)
		+form({
			title: "Settings",
			description: "Configure repository connection and synchronization settings.",
		})
			+form__field
				+text-input({
					placeholder: 'user-name/repo-name',
					label: 'GitHub repository ',
					required: true,
				})
			+form__field
				+text-input({
					placeholder: 'npm ci && npm run build',
					label: 'Build command'
				})
			+form__field
				+text-input({
					placeholder: 'master',
					label: 'Main branch'
				})
			+form__field({
				mods: {
					type: 'time'
				}
			})
				+text-input({
					placeholder: '10',
					label: 'Synchronize every',
					note: 'minutes',
					mods: {
						type: 'time'
					}
				})
			+form__actions
				+form__action
					+button({
						mods: {
							theme: 'primary',
							type: 'wide'
						}
					}) Save
				+form__action
					+button({
						mods: {
							theme: 'secondary',
							type: 'wide'
						}
					}) Cancel
