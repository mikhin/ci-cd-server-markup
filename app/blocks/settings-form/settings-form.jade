include ../form/form
include ../form/form__field
include ../form/form__actions
include ../form/form__action
include ../text-input/text-input
include ../field-label/field-label

mixin settings-form()
	.settings-form
		+form({
			data: {
				title: "Settings",
				description: "Configure repository connection and synchronization settings."
			}
		})
			+form__field
				+text-input({
					attrs: {
						placeholder: 'user-name/repo-name',
						required: true
					},
					data: {
						label: 'GitHub repository ',
						id: 'username'
					}
				})
			+form__field
				+text-input({
					attrs: {
						placeholder: 'npm ci && npm run build'
					},
					data: {
						label: 'Build command',
						id: 'command'
					}
				})
			+form__field
				+text-input({
					attrs: {
						placeholder: 'master'
					},
					data: {
						label: 'Main branch',
						id: 'branch'
					}
				})
			+form__field({
				mods: {
					type: 'time'
				}
			})
				+text-input({
					attrs: {
						placeholder: '10'
					},
					mods: {
						type: 'time'
					},
					data: {
						label: 'Synchronize every',
						note: 'minutes',
						id: 'interval'
					}
				})
			+form__actions
				+form__action
					+button({
						attrs: {
							href: '/start-screen.html',
						},
						mods: {
							theme: 'primary'
						},
						data: {
							text: 'Save'
						}
					})
				+form__action
					+button({
						attrs: {
							href: '/start-screen.html',
						},
						mods: {
							theme: 'secondary'
						},
						data: {
							text: 'Cancel'
						}
					})
